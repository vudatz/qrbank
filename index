    <script>
        const banks = [
            {n: "VietinBank", c: "ICB"}, {n: "Vietcombank", c: "VCB"}, {n: "MBBank", c: "MB"},
            {n: "ACB", c: "ACB"}, {n: "VPBank", c: "VPB"}, {n: "TPBank", c: "TPB"},
            {n: "BIDV", c: "BIDV"}, {n: "Sacombank", c: "STB"}, {n: "Agribank", c: "VBA"},
            {n: "Techcombank", c: "TCB"}
        ];

        const dict = {
            vi: { sub: "H·ªá th·ªëng t·∫°o m√£ QR thanh to√°n", bank: "Ng√¢n h√†ng", acc: "S·ªë t√†i kho·∫£n", amt: "S·ªë ti·ªÅn (T·ªëi thi·ªÉu 2.000ƒë)", btn: "T·∫°o m√£ ngay", resBank: "Ng√¢n h√†ng", resAcc: "S·ªë t√†i kho·∫£n", resAmt: "S·ªë ti·ªÅn", resNote: "N·ªôi dung", err: "T·ªëi thi·ªÉu 2.000ƒë", langBtn: "1. üáªüá≥ Ti·∫øng Vi·ªát", loading: "ƒêang t·∫°o..." },
            en: { sub: "QR Payment System", bank: "Bank", acc: "Account No.", amt: "Amount (Min 2,000ƒë)", btn: "Generate Now", resBank: "Bank", resAcc: "Account", resAmt: "Amount", resNote: "Reference", err: "Min 2,000ƒë", langBtn: "2. üá∫üá∏ English", loading: "Creating..." }
        };

        const select = document.getElementById('bank-select');
        banks.forEach(b => select.add(new Option(b.n, b.c, b.c==='ICB', b.c==='ICB')));

        let isDark = false, lang = 'vi';

        function formatCurrency(input) {
            let value = input.value.replace(/\D/g, "");
            input.value = value ? Number(value).toLocaleString('vi-VN') : "";
        }

        function toggleDarkMode() {
            isDark = !isDark;
            document.body.classList.toggle('dark');
            document.getElementById('dark-icon').innerText = isDark ? '‚òÄÔ∏è' : 'üåô';
        }

        function toggleLang() {
            lang = lang === 'vi' ? 'en' : 'vi';
            const d = dict[lang];
            document.getElementById('lang-text').innerText = d.langBtn;
            document.getElementById('sub-title').innerText = d.sub;
            document.getElementById('lbl-bank').innerText = d.bank;
            document.getElementById('lbl-acc').innerText = d.acc;
            document.getElementById('lbl-amt').innerText = d.amt;
            document.getElementById('btn-text').innerHTML = `<span class="loader-container">${d.btn}</span>`;
            document.getElementById('res-bank-lbl').innerText = d.resBank;
            document.getElementById('res-acc-lbl').innerText = d.resAcc;
            document.getElementById('res-amt-lbl').innerText = d.resAmt;
            document.getElementById('res-note-lbl').innerText = d.resNote;
        }

        function updateResultInfo() {
            if(!document.getElementById('result-content').classList.contains('hidden')) {
                document.getElementById('out-bank').innerText = banks.find(x => x.c === select.value).n;
                document.getElementById('out-acc').innerText = document.getElementById('account').value;
            }
        }

        function generateQR() {
            const raw = document.getElementById('amount').value.replace(/\./g, "");
            const am = parseInt(raw), b = select.value, a = document.getElementById('account').value;
            let n = document.getElementById('note').value.trim() || "chuyen tien";
            if(!am || am < 2000) return alert(dict[lang].err);

            const btn = document.getElementById('btn-gen'), btnText = document.getElementById('btn-text');
            btnText.innerHTML = `<span class="loader"></span> <span>${dict[lang].loading}</span>`;
            btn.disabled = true;

            const img = document.getElementById('qr-img');
            img.src = `https://img.vietqr.io/image/${b}-${a}-qr_only.png?amount=${am}&addInfo=${encodeURIComponent(n)}`;

            img.onload = () => {
                btnText.innerHTML = dict[lang].btn;
                btn.disabled = false;
                document.getElementById('empty-state').classList.add('hidden');
                document.getElementById('result-content').classList.remove('hidden');
                document.getElementById('out-bank').innerText = banks.find(x => x.c === b).n;
                document.getElementById('out-acc').innerText = a;
                document.getElementById('out-amt').innerText = am.toLocaleString('vi-VN') + " ƒë";
                document.getElementById('out-note').innerText = n;
                if(window.innerWidth < 768) window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
            };
        }

        async function downloadQR() {
            const img = document.getElementById('qr-img');
            const response = await fetch(img.src);
            const blob = await response.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `QR_Bank_${document.getElementById('account').value}.png`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }
    </script>
</body>
